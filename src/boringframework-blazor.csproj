<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RazorLangVersion>3.0</RazorLangVersion>
    <AssemblyName>Boring-Blazor</AssemblyName>
    <RootNamespace>Boring.Blazor</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>BoringFramework-Blazor</PackageId>
    <Authors>Pablo Pioli</Authors>
    <Company>Pablo Pioli</Company>
    <Product>The Boring Framework</Product>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/pablopioli/boringframework-blazor</RepositoryUrl>
    <Version>2.2.0</Version>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="BoringFramework" Version="1.11.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.7" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.7" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>


  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

</Project>
